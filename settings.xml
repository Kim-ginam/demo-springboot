<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
                      http://maven.apache.org/xsd/settings-1.0.0.xsd">

  <mirrors>
    <mirror>
      <id>artifact-registry-repo</id>
      <mirrorOf>*</mirrorOf>
      <url>https://asia-northeast3-maven.pkg.dev/angelic-bond-480000-e2/virtual-maven-repo</url>
    </mirror>
  </mirrors>

  <servers>
    <server>
      <id>artifact-registry-repo</id>
      <configuration>
        <wagonProvider>com.google.cloud.artifactregistry.WagonProvider</wagonProvider>
      </configuration>
      <username>_token</username>
      <password>${env.GOOGLE_OAUTH_ACCESS_TOKEN}</password>
    </server>
  </servers>

  <profiles>
    <profile>
      <id>google-artifact-registry</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <repositories>
        <repository>
          <id>artifact-registry-repo</id>
          <url>artifactregistry://asia-northeast3-maven.pkg.dev/angelic-bond-480000-e2/virtual-maven-repo</url>
          <releases><enabled>true</enabled></releases>
          <snapshots><enabled>true</enabled></snapshots>
        </repository>
      </repositories>
    </profile>
  </profiles>
</settings>
